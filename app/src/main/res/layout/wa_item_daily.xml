<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="dailyWeather"
            type="com.example.login.data.model.ForecastItem" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="8dp">

        <!-- Ngày -->
        <TextView
            android:id="@+id/tvDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@{dailyWeather.dateTime.substring(0,10)}"
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="start" />

        <!-- Icon thời tiết -->
        <ImageView
            android:id="@+id/ivDailyWeatherIcon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="@string/icon"
            app:imageUrl='@{"https://openweathermap.org/img/wn/" + dailyWeather.weather.get(0).icon + "@2x.png"}' />

        <!-- Nhiệt độ -->
        <TextView
            android:id="@+id/tvDailyTemp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text='@{String.format("%.1f°C", dailyWeather.main.temperature)}'
            android:textColor="#000000"
            android:textSize="16sp"
            android:gravity="end" />
    </LinearLayout>
</layout>
