                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                />

            <TextView
                android:id="@+id/dailyTemp3"
                android:layout_marginTop="2sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:text="â—Œ"
                android:textSize="20sp"
                android:padding="6dp"
                android:background="#b5dbff"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                />
            <TextView
                android:id="@+id/dailyTemp4"
                android:layout_marginTop="2sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â—Œ"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="6dp"
                android:background="#b5dbff"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                />
            <TextView
                android:layout_marginTop="2sp"
                android:id="@+id/dailyTemp5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="â—Œ"
                android:textAlignment="center"
                android:textSize="20sp"
                android:padding="6dp"
                android:background="#b5dbff"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="4"
                />

            <!-- ThÃªm cÃ¡c TextView khÃ¡c cho cÃ¡c ngÃ y tiáº¿p theo -->
        </LinearLayout>
    </RelativeLayout>
</androidx.drawerlayout.widget.DrawerLayout>
</layout>